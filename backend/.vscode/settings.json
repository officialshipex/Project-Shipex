{
  // ðŸš€ Disable watching heavy folders
  "files.watcherExclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.git": true,
    "**/.next": true,
    "**/.cache": true
  },

  // ðŸš€ Don't search inside big folders
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.git": true,
    "**/.next": true,
    "**/.cache": true
  },

  // ðŸš€ Disable auto type acquisition to reduce TypeScript/JS indexing load
  "typescript.disableAutomaticTypeAcquisition": true,

  // ðŸš€ Lower IntelliSense resource usage
  "typescript.tsserver.maxTsServerMemory": 2048,

  // ðŸš€ Disable Git tracking if repo is large (enable if you need Git inside VS Code)
  "git.enabled": false,

  // ðŸš€ Reduce extension load (disable error squiggles if not needed)
  "javascript.validate.enable": false,
  "typescript.validate.enable": false,

  // ðŸš€ Make explorer faster by not fetching metadata for all files
  "explorer.autoReveal": false,

  // ðŸš€ Auto save to avoid heavy undo stacks
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000
}
